source "https://rubygems.org"

ruby "1.9.3"

gem 'sinatra'
gem 'sinatra-activerecord'
gem 'pg'

group :development, :test do

  # Writing tests for code
  gem 'rspec'
  # Write tests for web apps
  gem 'capybara'
  # Reloads server on every page request
  gem 'shotgun'
  gem 'dotenv'

end



